<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutMonthlyHoroscope"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aylık Burç Yorumunuz"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/textViewZodiac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Burcunuz: Yengeç"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="12dp" />

    <TextView
        android:id="@+id/textViewMonthlyComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bu ay sizin için fırsatlarla dolu olabilir."
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="24dp" />

    <Button
        android:id="@+id/buttonBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Geri Dön" />
</LinearLayout>
